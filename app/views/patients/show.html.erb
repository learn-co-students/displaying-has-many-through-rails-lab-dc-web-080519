<h1>Patient: <%=@patient.name%></h1>

<h3>Details:</h3>
<p>Appointments:</p>
<ul>
<% @patient.appointments.each do |appointment| %>
<li><%= link_to "#{appointment.doctor.name} @ #{(appointment.appointment_datetime).strftime("%B %e, %Y at %k:%M")}", doctor_path(appointment.doctor)%> </li>
<% end %>
</ul>
