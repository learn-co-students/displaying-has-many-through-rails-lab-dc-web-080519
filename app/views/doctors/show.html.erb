<h1>Doctor: <%= @doctor.name %></h1>
<h3>Details:</h3>
<p>Department: <%=@doctor.department%></p>
<p>Appointments:</p>
<ul>
<% @doctor.appointments.each do |appointment| %>
<li><%= link_to "#{appointment.patient.name} @ #{(appointment.appointment_datetime).strftime("%B %e, %Y at %k:%M")}", patient_path(appointment.patient)%> </li>
<% end %>
</ul>
